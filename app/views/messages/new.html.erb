<%= javascript_include_tag 'application', 'data-turbolinks-track': 'partial-load' %>

<div id="loader-wrapper">
  <div class="logo"></div>
  <div id="loader">
  </div>
</div>

<section class="cnt_blank">

</section>

<section id="cnt_sec">

  <div class="container">

    <div class="row">

      <div class="col-lg-12 col-md-12 col-sm-12 col-xs12 ">
        <div class="title_sec">
          <h1>Contáctenos</h1>
          <h2>Solicite información o servicios adicionales</h2>
        </div>
      </div>

    </div>

  </div>

  <div class="col-sm-6">
    <div id="cnt_form">

        <%= form_for @message, url: contacto_path, html: {id:"contact-form", class: "contact", name:"contact-form" } do |message_form|  %>
            <fieldset>
              <div class="form-group">
                <%= message_form.text_field :name, placeholder: "Nombre", class:"form-control name-field" %>
              </div>

              <div class="form-group">
                <%= message_form.email_field :email, placeholder: "Email", class:"form-control mail-field" %>
              </div>

              <div class="form-group">
                <%= message_form.text_area :content, placeholder: "Mensaje", id:"message", class:"form-control" %>
              </div>
            </fieldset>

            <fieldset>
              <div class="form-group">
                <%= message_form.submit "Send" , class:"btn btn-primary"%>
              </div>
            </fieldset>
        <% end %>

    </div>
  </div>

  <div class="col-lg-6 col-md-6 col-sm-6">
    <div class="cnt_info">
      <ul>
        <li><i class="fa fa-map-signs"></i><p>Km. 5 via a Zamora</p></li>
        <li><i class="fa fa-envelope"></i><p>contact@codeIdeas.com</p></li>
        <li><i class="fa fa-phone"></i><p>+0987654321 </p></li>
      </ul>
    </div>
  </div>

</section>


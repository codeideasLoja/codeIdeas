<%= javascript_include_tag 'application', 'data-turbolinks-track': 'partial-load' %>

<div id="loader-wrapper">
  <div class="logo"></div>
  <div id="loader">
  </div>
</div>

<section class="cnt_blank">

</section>

<section id="cnt_sec">

  <div class="container">

    <div class="row">

      <div class="col-lg-12 col-md-12 col-sm-12 col-xs12 ">
        <div class="title_sec">
          <h1>Contáctenos</h1>
          <h2>Solicite información o servicios adicionales</h2>
        </div>
      </div>

    </div>

  </div>

  <div class="col-sm-6">
    <div id="cnt_form">

        <%= form_for @message, url: contacto_path, html: {id:"contact-form", class: "contact", name:"contact-form" } do |message_form|  %>
            <fieldset>
              <div class="form-group">
                <%= message_form.text_field :name, placeholder: "Nombre", class:"form-control name-field" %>
              </div>

              <div class="form-group">
                <%= message_form.email_field :email, placeholder: "Email", class:"form-control mail-field" %>
              </div>

              <div class="form-group">
                <%= message_form.text_area :content, placeholder: "Mensaje", id:"message", class:"form-control" %>
              </div>
            </fieldset>

            <fieldset>
              <div class="form-group">
                <%= message_form.submit "Enviar" , class:"btn btn-primary"%>
              </div>
            </fieldset>
        <% end %>


          <% flash.each do |key, value| %>
              <div class="alert alert-<%=key%> alert-dismissible" role="alert" >
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times</span></button>
                <%= value %>
              </div>
          <% end %>


    </div>
  </div>

  <div class="col-lg-6 col-md-6 col-sm-6">
    <div class="cnt_info">
      <ul>
        <li><i class="fa fa-map-signs"></i><p>Km. 5 via a Zamora</p></li>
        <li><i class="fa fa-envelope"></i><p>info@codeIdeas.com</p></li>
        <li><i class="fa fa-phone"></i><p>+0987654321 </p></li>
      </ul>
    </div>
  </div>

</section>

<section id="ltd_map_sec">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="map">
          <h1>Encuéntranos:</h1>

          <div class="panel panel-default">
            <div class="panel-body">
              <div class="map_area">
                <div id="googleMap" style="width:100%;height:350px;"></div>
              </div>
            </div>
          </div>


        </div>
      </div>
    </div>
  </div>
</section>


<script src="https://maps.googleapis.com/maps/api/js"></script>
<script>
  function initialize() {
    var mapOptions = {
      zoom: 14,
      scrollwheel: false,
      center: new google.maps.LatLng(-3.995193, -79.178999)
    };
    var map = new google.maps.Map(document.getElementById('googleMap'),
        mapOptions);
    var marker = new google.maps.Marker({
      position: map.getCenter(),
      animation: google.maps.Animation.BOUNCE,
      icon: '<%= asset_path('marker.png') %>',
      map: map
    });
  }
  google.maps.event.addDomListener(window, 'load', initialize);
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCvTfF9UFiVHwahujjSaVQrp6Y-PVdhULs&callback=initMap"
        async defer></script>
